// Correção da formatação do combo
(function() {
    'use strict';
    
    // Sobrescrever a função addComboToList para corrigir formatação
    window.addComboToList = function(title, quantity, price, comboData, totalItems, description, loteId, loteNome, startDate, endDate) {
        if (!window.ticketCount) window.ticketCount = 0;
        window.ticketCount++;
        
        const ticketList = document.getElementById('ticketList');
        if (!ticketList) return;

        const cleanPrice = parseFloat(price.replace(/[R$\s\.]/g, '').replace(',', '.'));
        const taxaServico = comboData.taxaServico !== false;
        const tax = taxaServico ? (cleanPrice * 0.1) : 0;
        const totalPrice = cleanPrice + tax;
        const receiveAmount = cleanPrice;
        
        // Formatação de valores
        const priceFormatted = `R$ ${cleanPrice.toFixed(2).replace('.', ',')}`;
        const taxFormatted = `R$ ${tax.toFixed(2).replace('.', ',')}`;
        const totalFormatted = `R$ ${totalPrice.toFixed(2).replace('.', ',')}`;
        const receiveFormatted = `R$ ${receiveAmount.toFixed(2).replace('.', ',')}`;
        
        // Formatar datas
        const formatDate = (dateStr) => {
            if (!dateStr) return 'N/A';
            const date = new Date(dateStr);
            return date.toLocaleDateString('pt-BR') + ' ' + date.toLocaleTimeString('pt-BR', {hour: '2-digit', minute: '2-digit'});
        };
        
        const ticketItem = document.createElement('div');
        ticketItem.className = 'ticket-item';
        ticketItem.dataset.ticketId = window.ticketCount;
        ticketItem.dataset.comboData = JSON.stringify(comboData);
        
        // Remover "Inclui:" duplicado da descrição
        let cleanDescription = description || '';
        if (cleanDescription.startsWith('Inclui:')) {
            cleanDescription = cleanDescription.substring(7).trim();
        }
        
        ticketItem.innerHTML = `
            <div class="ticket-header">
                <div class="ticket-title">
                    ${title}
                    <span class="ticket-type-badge combo" style="background: #9C27B0; color: white; padding: 2px 8px; border-radius: 12px; font-size: 11px; margin-left: 8px;">COMBO</span>
                </div>
                <div class="ticket-actions">
                    <button class="btn-icon" onClick="editTicket(${window.ticketCount})" title="Editar">
                        <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                            <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                        </svg>
                    </button>
                    <button class="btn-icon" onClick="removeTicket(${window.ticketCount})" title="Remover">
                        <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                        </svg>
                    </button>
                </div>
            </div>
            <div class="ticket-details">
                <div class="ticket-info">
                    <span>Quantidade: <strong>${quantity}</strong></span>
                    <span>Vendas: <strong>${formatDate(startDate)} até ${formatDate(endDate)}</strong></span>
                </div>
                
                <div class="ticket-pricing" style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 15px; margin-top: 15px; padding: 15px; background: #f8f9fa; border-radius: 8px;">
                    <div>
                        <div style="font-size: 11px; color: #6c757d; margin-bottom: 4px;">Preço</div>
                        <div style="font-size: 16px; font-weight: 600;">${priceFormatted}</div>
                    </div>
                    <div>
                        <div style="font-size: 11px; color: #6c757d; margin-bottom: 4px;">Taxa de serviço</div>
                        <div style="font-size: 16px;">${taxFormatted}</div>
                    </div>
                    <div>
                        <div style="font-size: 11px; color: #6c757d; margin-bottom: 4px;">Total comprador</div>
                        <div style="font-size: 16px; font-weight: 600;">${totalFormatted}</div>
                    </div>
                    <div>
                        <div style="font-size: 11px; color: #28a745; margin-bottom: 4px;">Você recebe</div>
                        <div style="font-size: 16px; font-weight: 600; color: #28a745;">${receiveFormatted}</div>
                    </div>
                </div>
                
                ${cleanDescription ? `
                <div class="ticket-description" style="margin-top: 12px; padding: 10px; background: #f0f0f0; border-radius: 6px; font-size: 13px; color: #666;">
                    ${cleanDescription}
                </div>
                ` : ''}
                
                <div class="combo-items" style="margin-top: 12px; padding: 12px; background: #e8f4fd; border-radius: 6px; border: 1px solid #b8e0ff;">
                    <strong style="color: #0066cc; font-size: 13px;">Inclui:</strong>
                    <ul style="margin: 8px 0 0 20px; padding: 0;">
                        ${comboData.itens.map(item => `
                            <li style="color: #555; font-size: 13px; margin-bottom: 4px;">
                                ${item.quantidade}x ${item.nome}
                            </li>
                        `).join('')}
                    </ul>
                </div>
                
                ${loteNome ? `
                <div style="margin-top: 10px; font-size: 12px; color: #6c757d;">
                    <strong>Lote:</strong> ${loteNome}
                </div>
                ` : ''}
            </div>
        `;
        
        ticketList.appendChild(ticketItem);
        
        // Armazenar dados do combo para edição
        ticketItem.ticketData = {
            type: 'combo',
            title: title,
            quantity: quantity,
            price: cleanPrice,
            description: cleanDescription,
            comboData: comboData,
            saleStart: startDate,
            saleEnd: endDate,
            loteId: loteId,
            loteName: loteNome
        };
        
        console.log('✅ Combo adicionado com sucesso:', title);
    };
    
    console.log('✅ Correção de formatação do combo carregada');
})();